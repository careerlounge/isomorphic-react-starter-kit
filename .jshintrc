{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": false,
  "curly": false,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  // "quotmark": "single", // wayyy too noisy in JSX (see note in `README.md`)
  "regexp": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "smarttabs": true,
  "-W097": true, // disable warning: Use the function form of “use strict”
  "globals": {
    "require": true,
    "module": true
  },
  "predef": [
    "-Promise" // disable warning: Redefinition of Promise
  ]
}
